# Test Docker Syntax Highlighting
FROM alpine:latest

# Define build arguments
ARG APP_VERSION
LABEL version=$APP_VERSION

# Use the variables
RUN echo "Building version ${APP_VERSION}"

# Set environment variable
ENV APP_HOME=/app
WORKDIR $APP_HOME

# Install a package
RUN apk add --no-cache bash

COPY test-script.sh .
RUN chmod +x test-script.sh

CMD ["./test-script.sh"]
